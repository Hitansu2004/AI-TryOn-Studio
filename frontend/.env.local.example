# Environment variables for the frontend application

# Backend API URL - Change this to your production backend URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080

# Optional: Enable debug mode
NEXT_PUBLIC_DEBUG=false

# Optional: Feature flags
NEXT_PUBLIC_ENABLE_INFINITE_SCROLL=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true

# Optional: Analytics and tracking (replace with actual keys)
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_HOTJAR_ID=XXXXXXX

# Optional: Third-party service URLs
# NEXT_PUBLIC_IMAGE_CDN_URL=https://your-cdn.com
